{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "go",
      "args": [
        "build",
        "-tags",
        "dev",
        "-gcflags",
        "all=-N -l",
        "-o",
        "build/bin/myproject.exe"
      ]
    },
    {
      "label": "wails-linux-build",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "/home/andreas/go/bin/wails",
      "args": [
        "build",
        "-platform",
        "linux/amd64",
        "-upx",
        "-upxflags",
        "\"--best\"",
        "-ldflags",
        "\"-s -w\"",
        "-webview2",
        "embed"
      ],
      "detail": "Full Wails build for Linux/amd64 with UPX and LDFLAGS"
    }
  ]
}